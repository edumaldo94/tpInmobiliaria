@model tpInmobliaria.Models.Inmueble
   <link rel="stylesheet" href="/css/Inmueble/Edit.css" />
@{
    ViewData["Title"] = "Crear Inmueble";
}


<div class="container">
    <div class="form-container">
         <h3 class="text-center">Inmueble</h3>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id_Inmuebles" />
 <div class="form-group">
                <label asp-for="PropietarioId" class="control-label">Propietario:</label>
                <select asp-for="PropietarioId" class="form-control">
                    <option value="">Seleccione un propietario</option>
                    @foreach (var proprietor in ViewBag.Proprietors)
                    {
                        <option value="@proprietor.id_Propietario">@proprietor.Nombre</option>
                    }
                </select>
                <span asp-validation-for="PropietarioId" class="text-danger"></span>
            </div>
    <div id="map" style="height: 400px;"></div>
   <div class="form-group">
                        <label asp-for="Latitud" class="control-label">Latitud:</label>
                        <input asp-for="Latitud" class="form-control" />
                        <span asp-validation-for="Latitud" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Longitud" class="control-label">Longitud:</label>
                        <input asp-for="Longitud" class="form-control" />
                        <span asp-validation-for="Longitud" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Ubicacion" class="control-label">Ubicación:</label>
                        <input asp-for="Ubicacion" class="form-control" />
                        <span asp-validation-for="Ubicacion" class="text-danger"></span>
                    </div>
                    


 <div class="form-group">
                <label asp-for="Direccion" class="control-label">Dirección:</label>
                <input asp-for="Direccion" class="form-control" />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>
              <div class="form-group">
                <label asp-for="Ambientes" class="control-label">Ambiente:</label>
                <input asp-for="Ambientes" class="form-control" />
                <span asp-validation-for="Ambientes" class="text-danger"></span>
            </div>
  <div class="form-group">
    <label asp-for="Uso" class="control-label">Uso:</label>
    <select asp-for="Uso" class="form-control">
        <option value="Comercial">Comercial</option>
        <option value="Residencial">Residencial</option>
    </select>
    <span asp-validation-for="Uso" class="text-danger"></span>
</div>
                       <div class="form-group">
    <label asp-for="Tipo" class="control-label">Tipo:</label>
    <select asp-for="Tipo" class="form-control">
           <option value="Local">Local</option>
        <option value="Deposito">Deposito</option>
        <option value="Casa">Casa</option>
         <option value="Departamento">Departamento</option>
    </select>
    <span asp-validation-for="Tipo" class="text-danger"></span>
</div>
           
      


            <div class="form-group">
                <label asp-for="Precio" class="control-label">Precio:</label>
                <input asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Disponible" class="control-label">Disponible:</label>
                <input asp-for="Disponible" class="form-control" />
                <span asp-validation-for="Disponible" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EstadoIn" class="control-label">Estado:</label>
                <input asp-for="EstadoIn" class="form-control" />
                <span asp-validation-for="EstadoIn" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Editar" class="btn btn-success" />
            </div>
        </form>
  
<div class="text-center mt-3">
    <button class="btn btn-primary" onclick="window.location.href='@Url.Action("Index")'">Atras</button>
</div>
</div>
@section Scripts {
    <script>
        function initMap() {
            var map = new google.maps.Map(document.getElementById('map'), {
                zoom: 15,
                center: { lat: parseFloat('@Model.Latitud'), lng: parseFloat('@Model.Longitud') }
            });

            var marker = new google.maps.Marker({
                position: { lat: parseFloat('@Model.Latitud'), lng: parseFloat('@Model.Longitud') },
                map: map,
                title: '@Model.Ubicacion'
            });
        }
    </script>
     <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBbDwBH7Jnb431kImDXDhp_9cUuwXCJAeA&callback=initMap" async defer></script>
}