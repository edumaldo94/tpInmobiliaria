@model tpInmobliaria.Models.Usuario
<link rel="stylesheet" href="/css/Usuario/Detail.css">
@{
    ViewData["Title"] = "Details";
}

<div class="form-row">
    
<div class="form-container">
<h1>Detalles</h1>

<div>
    <h4>Usuario</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-4">
            @Html.DisplayNameFor(model => model.Avatar)
        </dt>
        <dd class = "col-sm-5">
				@if (!Model.Avatar.Equals("sin avatar")&& Model.Avatar!=null)
				{
					<img class="foto" src="@Model.Avatar" />
				}
				else
				{
					<h2>Sin avatar</h2>
				}
        </dd>
        <dt class = "col-sm-4">
            @Html.DisplayNameFor(model => model.UsuarioId)
        </dt>
        <dd class = "col-sm-5">
            @Html.DisplayFor(model => model.UsuarioId)
        </dd>
        <dt class = "col-sm-4">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-5">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-4">
            @Html.DisplayNameFor(model => model.Apellido)
        </dt>
        <dd class = "col-sm-5">
            @Html.DisplayFor(model => model.Apellido)
        </dd>
        <dt class = "col-sm-4">
            @Html.DisplayNameFor(model => model.Correo)
        </dt>
        <dd class = "col-sm-5">
            @Html.DisplayFor(model => model.Correo)
        </dd>
        <dt class = "col-sm-4">
            @Html.DisplayNameFor(model => model.Rol)
        </dt>
        <dd class = "col-sm-5">
            @Html.DisplayFor(model => model.RolNombre)
        </dd>

    </dl>
</div>
<div>
    
    <button class="btn btn-info" onclick="window.location.href='@Url.Action("Edit", new { Model.UsuarioId })'">Editar</button>
    <a asp-action="Index" class="btn btn-1">Volver</a>
</div>
</div>
</div>