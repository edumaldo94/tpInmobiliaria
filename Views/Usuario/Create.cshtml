@model tpInmobliaria.Models.Usuario
<link rel="stylesheet" href="/css/Usuario/Create.css">
@{
    ViewData["Title"] = "Create";
}





<div class="container">
    <div class="form-container">
		<h1>Registrar Usuario</h1>
		<form asp-action="Create" enctype="multipart/form-data">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Nombre" class="control-label"></label>
				<input asp-for="Nombre" class="form-control" required/>
				<span asp-validation-for="Nombre" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Apellido" class="control-label"></label>
				<input asp-for="Apellido" class="form-control" required/>
				<span asp-validation-for="Apellido" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Correo" class="control-label"></label>
				<input asp-for="Correo" class="form-control" required/>
				<span asp-validation-for="Correo" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Password" class="control-label"></label>
				<input asp-for="Password" class="form-control" type="password"  required/>
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="ImgAvatar" class="control-label">Avatar</label>
				<input type="file" name="ImgAvatar" />
				<span asp-validation-for="ImgAvatar" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label class="control-label">Rol</label>
				<select class="form-control" name="Rol">
					<option value="2">Empleado</option>
                    <option value="1">Administrador</option>
				</select>
				<span asp-validation-for="Rol" class="text-danger"></span>
			</div>
			<div class="form-group2">
				<input type="submit" value="Registrar" class="btn btn-primary" />
				<a asp-action="Index" class="btn btn-primary">Volver</a>
			</div>
		</form>
    </div>
</div>

