<link rel="stylesheet" href="/css/Propietario/Detail.css" />



  <div class="form-row">
    
<div class="form-container">
   <h2 style="text-align: center;">Propietario</h2>
    <dl class="row">
     <dt class="col-sm-4">@Html.DisplayNameFor(model => Model.id_Propietario)</dt>
