</dl>
</div>
</div>


    


  
<div class="text-center">
    <h1 class="display-4">Lista de Inmuebles</h1>

    <table id="contratoTable" class="table">
        <thead>
            <tr>
                <th>NÂ°</th>
                <th>Ubicacion</th>
                <th>Direccion</th>
                <th>Ambientes</th>
                <th>Uso</th>
                <th>Tipo</th>
                    <th>Precio</th>
                        <th>Disponible</th>
                                <th>Modificar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var inmueble in ViewBag.Inmuebles)
            {
                <tr>
                    <td>@inmueble.id_Inmuebles</td>
                    <td>@inmueble.Ubicacion</td>
                    <td>@inmueble.Direccion</td>
                    <td>@inmueble.Ambientes</td>
                    <td>@inmueble.Uso</td>
                    <td>@inmueble.Tipo</td>
                    <td>@inmueble.Precio</td>
                    <td>@inmueble.Disponible</td>
                   <td>  <button class="btn btn-info" onclick="window.location.href='@Url.Action("Edit","Inmueble", new { id = inmueble.id_Inmuebles })'">Modificar</button></td>
                </tr>
            }
        </tbody>
    </table>
</div>