@model IEnumerable<tpInmobliaria.Models.Pago>
    <link rel="stylesheet" href="/css/Pago/Index.css" />


@{
    ViewData["Title"] = "Pagos del Contrato";
}

<div class="text-center">
    <h1 class="display-4">Lista de Pagos del Contrato</h1>

    <table class="table">
        <thead>
            <tr>
               
                <th>NÃºmero de Pago</th>
                <th>Concepto</th>
                <th>Fecha de Pago</th>
                <th>Importe</th>
                <th>Estado de Pago</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var pago in Model)
            {
                <tr>
             
                    <td>@pago.NumeroPago</td>
                    <td>@pago.Concepto</td>
                    <td>@pago.FechaPago.ToString()</td>
                    <td>@pago.Importe</td>
                    <td>@pago.EstadoPago</td>
                </tr>
            }
        </tbody>
    </table>
</div>


    <div class="form-row"></div>
      
            <form asp-action="Detail">
                <a asp-action="Create" class="btn btn-success">Nuevo Pago</a>
                <a asp-action="Edit" class="btn btn-success">Modificar Pago</a>
            </form>
        
    </div>

