@model  tpInmobliaria.Models.Pago
<link rel="stylesheet" href="/css/Pago/Create.css" />

@{
    ViewData["Title"] = "Pago";
}





<div class="container">
    <div class="form-container">
        <h4>Pago</h4>
        <form asp-action="Crear">
               
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
   
            <div class="form-group">
			<!--	<label class="control-label">Contrato</label>
				<select class="form-control" name="ContratoId" id="contraId"> 
                    -->
                     <label asp-for="ContratoId" class="control-label">Contrato:</label>
                <select asp-for="ContratoId" class="form-control">
                  
                        @if (ViewBag.Contratos != null)
                    {
					
						<option value="@ViewBag.Contratos.id_Contrato">@("("+ViewBag.Contratos.Inmueble.Direccion+") Precio:"+ViewBag.Contratos.Monto)</option>
					
                    }
				</select>
				<span asp-validation-for="ContratoId" class="text-danger"></span>
			</div>

           <div class="form-group">
         @if (ViewBag.pagos != null && ViewBag.pagos.Count > 0)
        {    
            var ultimoPago = ViewBag.pagos[ViewBag.pagos.Count - 1];
    <label asp-for="NumeroPago" class="control-label">NÃºmero de Pago (Pago Anterior: @ultimoPago.NumeroPago)</label>
            <input asp-for="NumeroPago" class="form-control" required/>
    <span asp-validation-for="NumeroPago" class="text-danger"></span>
      }
</div>

            <div class="form-group">
    <label asp-for="Concepto" class="control-label"></label>
    <select asp-for="Concepto" class="form-control" required>
      @if (ViewBag.pagos != null && ViewBag.pagos.Count > 0)
    {
        var ultimoPago = ViewBag.pagos[ViewBag.pagos.Count - 1];
        <option value="">Mes Anterior: @ultimoPago.Concepto</option>
    }
        <option value="Enero">Enero</option>
        <option value="Febrero">Febrero</option>
        <option value="Marzo">Marzo</option>
        <option value="Abril">Abril</option>
        <option value="Mayo">Mayo</option>
        <option value="Junio">Junio</option>
        <option value="Julio">Julio</option>
        <option value="Agosto">Agosto</option>
        <option value="Septiembre">Septiembre</option>
        <option value="Octubre">Octubre</option>
        <option value="Noviembre">Noviembre</option>
        <option value="Diciembre">Diciembre</option>
    </select>
    <span asp-validation-for="Concepto" class="text-danger"></span>
</div>

            <div class="form-group">
                <label asp-for="FechaPago" class="control-label"></label>
                <input asp-for="FechaPago" class="form-control" required/>
                <span asp-validation-for="FechaPago" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Importe" class="control-label"></label>
                <input asp-for="Importe" class="form-control" required/>
                <span asp-validation-for="Importe" class="text-danger"></span>
            </div>
                  <div class="form-group">
    <label asp-for="EstadoPago" class="control-label"></label>
    <select asp-for="EstadoPago" class="form-control" required>
        <option value="">Seleccione un Estado</option>
        <option value="Abono">Abono</option>
        <option value="No Abono">No Abono</option>
    </select>
    <span asp-validation-for="EstadoPago" class="text-danger"></span>
</div>
              <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            
                <a asp-action="Index">Volver</a>
            </div>
        </form>
    </div>
</div>


