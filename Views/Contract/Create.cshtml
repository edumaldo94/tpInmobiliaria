@model  tpInmobliaria.Models.Contract
@{
    ViewData["Title"] = "Crear Contrato";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="id_Property" class="control-label">ID de Propiedad:</label>
                <input asp-for="id_Property" class="form-control" />
                <span asp-validation-for="id_Property" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="id_Tenant" class="control-label">ID de Inquilino:</label>
                <input asp-for="id_Tenant" class="form-control" />
                <span asp-validation-for="id_Tenant" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Start_date" class="control-label">Fecha de Inicio:</label>
                <input asp-for="Start_date" class="form-control" />
                <span asp-validation-for="Start_date" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="End_date" class="control-label">Fecha de Finalizaci√≥n:</label>
                <input asp-for="End_date" class="form-control" />
                <span asp-validation-for="End_date" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Rental_amount" class="control-label">Monto del Alquiler:</label>
                <input asp-for="Rental_amount" class="form-control" />
                <span asp-validation-for="Rental_amount" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Penalize" class="control-label">Multa:</label>
                <input asp-for="Penalize" class="form-control" />
                <span asp-validation-for="Penalize" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="StateC" class="control-label">Estado:</label>
                <input asp-for="StateC" class="form-control" />
                <span asp-validation-for="StateC" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
