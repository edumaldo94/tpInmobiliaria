@model tpInmobliaria.Models.Property
@{
    ViewData["Title"] = "Crear Propiedad";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
<div class="form-group">
    <label asp-for="id_Proprietor" class="control-label">Propietario:</label>
    <select asp-for="id_Proprietor" class="form-control">
        <option value="">Seleccione un propietario</option>
        @foreach (var proprietor in ViewBag.Proprietors)
        {
            <option value="@proprietor.id_Proprietor">@proprietor.Name</option>
        }
    </select>
    <span asp-validation-for="id_Proprietor" class="text-danger"></span>
</div>





            <div class="form-group">
                <label asp-for="id_Property_type" class="control-label">Tipo de Propiedad:</label>
                <input asp-for="id_Property_type" class="form-control" />
                <span asp-validation-for="id_Property_type" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Address" class="control-label">Direcci√≥n:</label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

        <div class="form-group">
    <label asp-for="Use_type" class="control-label">Tipo de Uso:</label>
    <select asp-for="Use_type" class="form-control">
        <option value="Comercial">Comercial</option>
        <option value="Residencial">Residencial</option>
    </select>
    <span asp-validation-for="Use_type" class="text-danger"></span>
</div>


            <div class="form-group">
                <label asp-for="Coordinates" class="control-label">Coordenadas:</label>
                <input asp-for="Coordinates" class="form-control" />
                <span asp-validation-for="Coordinates" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price" class="control-label">Precio:</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="StateP" class="control-label">Estado:</label>
                <input asp-for="StateP" class="form-control" />
                <span asp-validation-for="StateP" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
